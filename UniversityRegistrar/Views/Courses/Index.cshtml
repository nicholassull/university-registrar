@using UniversityRegistrar.Models;
@{
  Layout = "_Layout";
}

<h2>Courses</h2>
<hr />

@if (Model.Count == 0)
{
  <h3>There are no courses added.</h3>
}

<ul>
  @foreach (Course course in Model)
  {
    <li>@Html.ActionLink($"{course.CourseName}", "Details", new {id = course.CourseId})</li>
  }
</ul>

@Html.ActionLink("Add New Course", "Create", new {}, new { @class = "btn btn-outline-primary" })
@Html.ActionLink("Home", "Index", "Home", new {}, new { @class = "btn btn-outline-primary" })