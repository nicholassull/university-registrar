@{
  Layout = "_Layout";
}
@model UniversityRegistrar.Models.Course

<h2>Edit Course</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)
  <div class="form-group">
    @Html.LabelFor(model => model.CourseName)
    @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Label)
    @Html.TextBoxFor(model => model.Label, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Description)
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control"})
  </div>
  <div class="form-group">
    <input type = "submit" value = "Save Changes" class = "btn btn-dark">
  </div>
}

@Html.ActionLink("Back to Courses", "Index", new {}, new { @class = "btn btn-outline-primary" })