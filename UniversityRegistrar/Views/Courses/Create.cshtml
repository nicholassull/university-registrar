@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<h2>Add a new course</h2>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.CourseName)
    @Html.TextBoxFor(model => model.CourseName, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Label)
    @Html.TextBoxFor(model => model.Label, new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.Description)
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
  </div>
  <div class="form-group">
    <input type = "submit" value = "Add New Course" class = "btn btn-dark">
  </div>

}

@Html.ActionLink("Show All Courses", "Index", new {}, new { @class = "btn btn-outline-primary" })