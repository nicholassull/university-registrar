@{
  Layout = "_Layout";
}
@model UniversityRegistrar.Models.Student

<h2>Edit Student</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)
  <div class="form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.EditorFor(model => model.EnrollmentDate, new { @type = "date" })
  </div>

  <div class="form-group">
    <input type = "submit" value = "Save Changes" class = "btn btn-dark">
  </div>
}

<p>@Html.ActionLink("Back to Courses", "Index")</p>


