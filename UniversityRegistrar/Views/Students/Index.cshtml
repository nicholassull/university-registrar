@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models

<h2>Students</h2>

@if (Model.Count == 0)
{
  <h3>There are no students.</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name} | {student.EnrollmentDate}", "Details", new {id = student.StudentId})</li>
}

@Html.ActionLink("Add New Student", "Create", new { }, new { @class = "btn btn-outline-primary" })
@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "btn btn-outline-primary" })